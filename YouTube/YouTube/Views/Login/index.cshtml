@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Login page YouTube">
    <meta name="author" content="Dennis Fokker">

    <title>YouTube - login</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/ie10-viewport-bug-workaround.css" rel="stylesheet">
    <link href="~/Content/login.css" rel="stylesheet">

    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>
    <div class="container">
        <form class="form-signin" method="post">
            <a class="navbar-brand logo" href="@Url.Action("Index", "home")"></a>
            <h2 class="form-signin-heading">sign in</h2>
            <div @{
                if (ViewBag.LoginFailed != null && (bool) ViewBag.LoginFailed)
                {
                <text>class="form-group has-error"></text>
                    <label for="inputError" class="control-label">Invalid credentials</label>
                }
                else
                {
                    <text>></text>
                }
            }
                <label for="inputEmail" class="sr-only">Email address</label>
                <input type="email" name="inputEmail" class="form-control" placeholder="Email address" required autofocus>
                <label for="inputPassword" class="sr-only">Password</label>
                <input type="password" name="inputPassword" class="form-control" placeholder="Password" required>
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        </form>
    </div>
    <!-- /container -->

    <script src="~/Scripts/ie10-viewport-bug-workaround.js"></script>
</body>
</html>